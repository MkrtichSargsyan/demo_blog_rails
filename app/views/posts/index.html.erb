<h1 class='title'>Blog index</h1>
<section class="section">
  <div class="container">
    <% @posts.each do |post|%>
      <div class="card">
        <div class="media">
          <div class="media-content">
            <div class="title is-4">
              <%= link_to post.title, post %>
            </div>
          </div>
        </div>
        <div class="content">
          <%= post.content %>
        </div>
        <%#<div class="comment-count">
          <span class="tag is-rounded">
          </span>
        </div>%>
      </div>
    <% end %>
  </div>
</section>
